<!-- ABOUTME: Session detail page showing session info and RSVP buttons -->
<!-- ABOUTME: Includes Turbo Frame for dynamic RSVP updates -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @session.title %></h1>
        <p class="text-sm text-gray-500"><%= @study_group.name %></p>
      </div>
      <div class="flex gap-2">
        <% if policy(@session).update? %>
          <%= link_to "Edit", edit_study_group_study_session_path(@study_group, @session), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
        <% end %>
        <% if policy(@session).destroy? %>
          <%= button_to "Delete", study_group_study_session_path(@study_group, @session), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded" %>
        <% end %>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">Date</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @session.date.strftime('%A, %B %d, %Y') %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Time</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @session.start_time.strftime('%I:%M %p') %> - <%= @session.end_time.strftime('%I:%M %p') %>
          </dd>
        </div>

        <% if @session.location.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Location</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @session.location %></dd>
          </div>
        <% end %>

        <% if @session.meeting_link.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Meeting Link</dt>
            <dd class="mt-1 text-sm">
              <%= link_to @session.meeting_link, @session.meeting_link, class: "text-blue-600 hover:text-blue-800", target: "_blank" %>
            </dd>
          </div>
        <% end %>

        <% if @session.max_capacity.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Capacity</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @session.session_rsvps.attending.count %>/<%= @session.max_capacity %> spots filled
              <% if @session.full? %>
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Full
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @session.description.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap"><%= @session.description %></dd>
          </div>
        <% end %>

        <% if @session.prep_materials.present? %>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Preparation Materials</dt>
            <dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap"><%= @session.prep_materials %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <%= turbo_frame_tag "rsvp_section" do %>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6 bg-gray-50">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Your RSVP</h3>
        <%= render 'session_rsvps/rsvp_buttons', session: @session, current_user_rsvp: @current_user_rsvp %>
      </div>
    <% end %>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">
        Attendees (<%= @session.session_rsvps.attending.count %>)
      </h3>
      <% attending_rsvps = @session.session_rsvps.includes(:user).where(status: [:going, :maybe]).order(:status) %>
      <% if attending_rsvps.any? %>
        <ul class="divide-y divide-gray-200">
          <% attending_rsvps.each do |rsvp| %>
            <li class="py-3">
              <div class="flex items-center justify-between">
                <p class="text-sm text-gray-900"><%= rsvp.user.name %></p>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= rsvp.going? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= rsvp.status.titleize %>
                </span>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-sm text-gray-500">No RSVPs yet</p>
      <% end %>
    </div>
  </div>

  <%= link_to "Back to Sessions", study_group_study_sessions_path(@study_group), class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
</div>
