<!-- ABOUTME: Shared form partial for creating and editing sessions -->
<!-- ABOUTME: Includes all session fields with Tailwind styling -->
<%= form_with(model: @session, url: @session.new_record? ? study_group_study_sessions_path(@study_group) : study_group_study_session_path(@study_group, @session), local: true, class: "space-y-6") do |form| %>
  <% if @session.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@session.errors.count, "error") %> prohibited this session from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @session.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Midterm Review Session" %>
  </div>

  <div class="grid grid-cols-1 gap-6 sm:grid-cols-3">
    <div>
      <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :start_time, class: "block text-sm font-medium text-gray-700" %>
      <%= form.time_field :start_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :end_time, class: "block text-sm font-medium text-gray-700" %>
      <%= form.time_field :end_time, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= form.label :location, "Location (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :location, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Library Room 301" %>
  </div>

  <div>
    <%= form.label :meeting_link, "Meeting Link (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.url_field :meeting_link, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "https://zoom.us/j/123456789" %>
  </div>

  <div>
    <%= form.label :max_capacity, "Max Capacity (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :max_capacity, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", min: 1, placeholder: "Leave blank for unlimited" %>
    <p class="mt-1 text-sm text-gray-500">Leave blank if there's no capacity limit</p>
  </div>

  <div>
    <%= form.label :description, "Description (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "What will be covered in this session?" %>
  </div>

  <div>
    <%= form.label :prep_materials, "Preparation Materials (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :prep_materials, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Read chapters 1-5, complete practice problems" %>
  </div>

  <div class="flex gap-3">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded cursor-pointer" %>
    <%= link_to "Cancel", @session.new_record? ? study_group_study_sessions_path(@study_group) : study_group_study_session_path(@study_group, @session), class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded" %>
  </div>
<% end %>
