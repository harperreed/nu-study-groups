<!-- ABOUTME: Study group detail page showing group info, members, and sessions -->
<!-- ABOUTME: Creator and admins see edit/delete buttons -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 flex justify-between items-center">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @study_group.name %></h1>
        <p class="text-sm text-gray-500"><%= @study_group.course.name %></p>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @study_group.official? ? 'bg-purple-100 text-purple-800' : 'bg-green-100 text-green-800' %> mt-2">
          <%= @study_group.group_type.titleize %>
        </span>
      </div>
      <div class="flex gap-2">
        <% user_membership = @study_group.study_group_memberships.find_by(user: current_user) %>
        <% if user_membership&.pending? %>
          <span class="bg-yellow-100 text-yellow-800 font-semibold py-2 px-4 rounded">Pending Approval</span>
        <% elsif !user_membership && current_user != @study_group.creator %>
          <%= button_to "Join Group", join_study_group_path(@study_group), method: :post, class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded" %>
        <% end %>
        <% if policy(@study_group).update? %>
          <%= link_to "Edit", edit_study_group_path(@study_group), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
        <% end %>
        <% if policy(@study_group).destroy? %>
          <%= button_to "Delete", study_group_path(@study_group), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded" %>
        <% end %>
      </div>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @study_group.description || 'No description provided' %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Course</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to @study_group.course.name, course_path(@study_group.course), class: "text-blue-600 hover:text-blue-800" %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created By</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @study_group.creator.name %></dd>
        </div>
      </dl>
    </div>

    <% if policy(@study_group).update? %>
      <% pending_requests = @study_group.study_group_memberships.where(status: :pending).includes(:user) %>
      <% if pending_requests.any? %>
        <div class="border-t border-gray-200 px-4 py-5 sm:px-6 bg-yellow-50">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Pending Join Requests (<%= pending_requests.count %>)</h3>
          <ul class="divide-y divide-gray-200">
            <% pending_requests.each do |membership| %>
              <%= turbo_frame_tag dom_id(membership) do %>
                <li class="py-3">
                  <div class="flex items-center justify-between">
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900"><%= membership.user.name %></p>
                      <p class="text-xs text-gray-500">Requested <%= time_ago_in_words(membership.requested_at) %> ago</p>
                    </div>
                    <div class="flex gap-2">
                      <%= button_to "Approve", approve_study_group_membership_path(membership), method: :patch, class: "bg-green-600 hover:bg-green-700 text-white font-semibold py-1 px-3 rounded text-sm" %>
                      <%= button_to "Reject", reject_study_group_membership_path(membership), method: :patch, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-1 px-3 rounded text-sm" %>
                    </div>
                  </div>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Members (<%= @study_group.members.count %>)</h3>
      <% if @study_group.members.any? %>
        <ul class="divide-y divide-gray-200">
          <% @study_group.members.each do |member| %>
            <li class="py-3">
              <div class="flex items-center justify-between">
                <p class="text-sm text-gray-900"><%= member.name %></p>
                <span class="text-xs text-gray-500"><%= member.role.titleize %></span>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-sm text-gray-500">No members yet</p>
      <% end %>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-lg font-medium text-gray-900">Upcoming Sessions</h3>
        <% if policy(Session.new(study_group: @study_group)).create? %>
          <%= link_to "Create Session", new_study_group_study_session_path(@study_group), class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-3 rounded text-sm" %>
        <% end %>
      </div>
      <% upcoming_sessions = @study_group.sessions.upcoming.limit(3) %>
      <% if upcoming_sessions.any? %>
        <ul class="divide-y divide-gray-200 mb-4">
          <% upcoming_sessions.each do |session| %>
            <li class="py-3">
              <%= link_to study_group_study_session_path(@study_group, session), class: "block hover:bg-gray-50 -mx-2 px-2 py-2 rounded" do %>
                <div class="flex items-center justify-between">
                  <div class="flex-1">
                    <h4 class="text-sm font-medium text-gray-900"><%= session.title %></h4>
                    <p class="text-xs text-gray-500 mt-1">
                      <%= session.date.strftime('%b %d') %> at <%= session.start_time.strftime('%I:%M %p') %>
                    </p>
                  </div>
                  <% if session.max_capacity.present? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= session.full? ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                      <%= session.session_rsvps.attending.count %>/<%= session.max_capacity %>
                    </span>
                  <% end %>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
        <%= link_to "View All Sessions", study_group_study_sessions_path(@study_group), class: "text-sm text-blue-600 hover:text-blue-800" %>
      <% else %>
        <p class="text-sm text-gray-500">No sessions scheduled yet</p>
      <% end %>
    </div>
  </div>

  <%= link_to "Back to Study Groups", study_groups_path, class: "mt-4 inline-block text-blue-600 hover:text-blue-800" %>
</div>
