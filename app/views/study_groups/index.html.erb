<!-- ABOUTME: Study groups listing page showing all active study groups -->
<!-- ABOUTME: Shows course, group type, creator, and member count for each group -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Study Groups</h1>
    <% if policy(StudyGroup).create? %>
      <%= link_to "New Study Group", new_study_group_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
    <% end %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul role="list" class="divide-y divide-gray-200">
      <% @study_groups.each do |study_group| %>
        <li>
          <%= link_to study_group_path(study_group), class: "block hover:bg-gray-50" do %>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-lg font-semibold text-blue-600"><%= study_group.name %></p>
                  <p class="text-sm text-gray-900"><%= study_group.course.name %></p>
                  <div class="mt-2 flex items-center gap-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= study_group.official? ? 'bg-purple-100 text-purple-800' : 'bg-green-100 text-green-800' %>">
                      <%= study_group.group_type.titleize %>
                    </span>
                    <span class="text-xs text-gray-500">
                      <%= pluralize(study_group.members.count, 'member') %>
                    </span>
                  </div>
                </div>
                <div class="text-sm text-gray-500">
                  <p>Created by <%= study_group.creator.name %></p>
                </div>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
