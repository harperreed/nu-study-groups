# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration
POSTGRES_USER=nu
POSTGRES_PASSWORD=changeme_to_secure_password
POSTGRES_DB=nu_production
QUEUE_POSTGRES_DB=nu_queue_production

# Rails Configuration
RAILS_ENV=production
SECRET_KEY_BASE=generate_with_rails_secret_key_base_command

# Application Port
PORT=3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Application Host (required for email links)
APP_HOST=yourdomain.com

# Optional: Rails Hostname (if behind reverse proxy)
# RAILS_HOSTNAME=yourdomain.com
